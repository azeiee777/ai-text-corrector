{
  "manifest_version": 3,
  "name": "GPT Text Corrector",
  "version": "1.0",
  "description": "Correct grammar, clarity, and tone using GPT",
  "permissions": [
    "storage",
    "contextMenus",
    "activeTab"
  ],
  "host_permissions": [
    "https://api.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}

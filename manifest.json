{
  "manifest_version": 3,
  "name": "PolishText AI",
  "version": "1.0.0",
  "description": "Correct and polish text using AI. Improve grammar, clarity, and tone instantly.",
  "permissions": [
    "storage",
    "contextMenus",
    "activeTab"
  ],
  "host_permissions": [
    "https://polish-text-ai-backend.onrender.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
  "16": "icon16.png",
  "48": "icon48.png",
  "128": "icon128.png"
	}
}